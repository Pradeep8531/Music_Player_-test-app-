<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".player1Activity"
    android:background="@drawable/mainback">

        <ImageView
            android:id="@+id/songpc"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/selena"/>


    <TextView
        android:id="@+id/songn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Don't Talk Anymore"
        android:textSize="14dp"
        android:padding="5dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/descri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Selena Gomez and Charlie puth"
        android:textSize="14dp"
        android:padding="5dp"
        android:textColor="@color/black"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:progress="40"
        android:padding="10dp"
        android:thumbTint="@color/black"
        android:progressTint="@color/black"/>
    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginBottom="-400dp">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:src="@drawable/bagc"
            />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="-30dp">

            <ImageButton
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bgcir"
                android:src="@drawable/prev" />

            <ImageButton
                android:id="@+id/play_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bgcir"
                android:src="@drawable/play" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bgcir"
                android:src="@drawable/next" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>